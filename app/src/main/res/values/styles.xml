<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="white_filled_big_button_style">
        <item name="android:background">@drawable/background_white_filled_radius</item>
        <item name="android:textColor">@color/dodger_blue</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginStart">@dimen/standard_margin</item>
        <item name="android:layout_marginEnd">@dimen/standard_margin</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/big_button_height</item>
        <item name="android:textSize">@dimen/text_size_15</item>
        <item name="android:fontFamily">@font/noto_sans_armenian_semibold</item>
        <item name="fontFamily">@font/noto_sans_armenian_semibold</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="pink_blue_gradient_filled_big_button_style">
        <item name="android:background">@drawable/background_pink_blue_gradient_button</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginStart">@dimen/standard_margin</item>
        <item name="android:layout_marginEnd">@dimen/standard_margin</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/big_button_height</item>
        <item name="android:textSize">@dimen/text_size_15</item>
        <item name="android:fontFamily">@font/noto_sans_armenian_bold</item>
        <item name="fontFamily">@font/noto_sans_armenian_bold</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="CustomCardViewStyle" parent="@style/Widget.MaterialComponents.CardView">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay_card_custom_corners</item>
    </style>

    <style name="MyRadioButtonStyle" parent="@android:style/Widget.CompoundButton.RadioButton">
        <item name="android:button">@drawable/selector_custom_radio_btn</item>
    </style>

    <style name="ShapeAppearanceOverlay_card_custom_corners" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">20dp</item>
        <item name="cornerSizeTopLeft">20dp</item>
        <item name="cornerSizeBottomRight">20dp</item>
        <item name="cornerSizeBottomLeft">20dp</item>
    </style>

    <style name="blue_outlined_button_style">
        <item name="android:layout_height">@dimen/big_button_height</item>
        <item name="android:background">@drawable/background_blue_primary_stroke_radius</item>
        <item name="android:textSize">@dimen/text_size_15</item>
        <item name="android:textColor">@color/blue_primary</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="fontFamily">@font/noto_sans_armenian_bold</item>
        <item name="android:fontFamily">@font/noto_sans_armenian_bold</item>
    </style>

    <style name="MaterialInputStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="boxStrokeColor">@color/blue_primary</item>
        <item name="hintTextColor">@color/blue_primary</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="MaterialInputStyle.ErrorEnabled">
        <item name="errorEnabled">true</item>
    </style>


    <style name="MaterialInputStyleExposedDropdown" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense.ExposedDropdownMenu">
        <item name="boxStrokeColor">@color/blue_primary</item>
        <item name="hintTextColor">@color/blue_primary</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="MaterialInputTheme" >
        <item name="colorControlActivated">@color/blue_primary</item>
    </style>

    <style name="fab_style" parent="Widget.MaterialComponents.ExtendedFloatingActionButton">
        <item name="iconTint">@color/white</item>
        <item name="backgroundTint">@color/blue_primary</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:minWidth">56dp</item>
        <item name="collapsedSize">56dp</item>
    </style>

</resources>